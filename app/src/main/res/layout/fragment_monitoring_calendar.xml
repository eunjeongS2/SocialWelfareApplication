<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorWhite"
        android:layout_marginTop="52dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp" app:srcCompat="@drawable/ic_file_download"
            android:id="@+id/exportFileButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:contentDescription="@string/export_csv" app:layout_constraintTop_toTopOf="parent"/>


    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
            android:id="@+id/calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/rangeMode"
            app:mcv_showOtherDates="defaults"
            app:mcv_headerTextAppearance="@style/CalendarHeaderText"
            app:mcv_weekDayTextAppearance="@style/CalendarWeekText"
            app:mcv_dateTextAppearance="@style/CalendarDateText"

            app:mcv_selectionColor="#ecedf1"

            android:layout_marginBottom="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp" app:layout_constraintTop_toBottomOf="@+id/exportFileButton">

    </com.prolificinteractive.materialcalendarview.MaterialCalendarView>


    <Switch
            android:text="@string/range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rangeMode"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>
    <TextView
            android:text="@string/setting"
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/applyButton"
            android:layout_marginBottom="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>