<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="24dp"
>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_close" android:id="@+id/cancelButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:contentDescription="@string/cancel"
            android:layout_marginEnd="6dp"/>
    <TextView
            android:maxEms="7"
            android:textSize="20sp"
            tools:text="00"
            android:textAlignment="textEnd"
            android:textColor="@color/colorAccent"
            android:paddingStart="18dp"
            android:paddingEnd="0dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/userText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/messageText" android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toStartOf="@+id/messageText" app:layout_constraintHorizontal_bias="0.5"/>
    <TextView
            android:textSize="20sp"
            android:text="@string/message_to"
            android:paddingStart="0dp"
            android:paddingEnd="18dp"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/messageText"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/cancelButton"
            android:layout_marginTop="16dp" app:layout_constraintStart_toEndOf="@+id/userText"
            app:layout_constraintHorizontal_bias="0.5"/>
    <TextView
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:textAlignment="center"
            android:text="@string/message_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/sendButton"
            app:layout_constraintTop_toBottomOf="@+id/messageText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="26dp" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toStartOf="@+id/view" app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:textSize="16sp"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:text="@string/message_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/groupButton" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/messageText"
            app:layout_constraintStart_toEndOf="@+id/view" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="26dp" android:layout_marginStart="16dp"/>
    <View
            android:background="@color/colorBlack"
            android:layout_width="1dp"
            android:layout_height="0dp" android:id="@+id/view"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/sendButton" app:layout_constraintBottom_toBottomOf="@+id/sendButton"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp" android:layout_marginBottom="2dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>