<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SearchView" parent="Widget.AppCompat.SearchView" >
        <item name="android:textSize">15sp</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">#d8d8d8</item>
        <item name="colorControlActivated">#d8d8d8</item>
        <!--<item name="android:textCursorDrawable">@color/indigo500</item>-->
        <!--<item name="android:textColor">@color/orange500</item>-->
        <item name="android:textColorHint">#c6c6c6</item>
        <item name="android:textSize">18sp</item>
        <!--<item name="android:textColorHighlight">@color/purple500</item>-->
    </style>

    <style name="ImageEditText" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">#d8d8d8</item>
        <item name="colorControlActivated">#d8d8d8</item>
        <item name="android:hint">@string/input_image</item>
        <!--<item name="android:textCursorDrawable">@color/indigo500</item>-->
        <!--<item name="android:textColor">@color/orange500</item>-->
        <item name="android:textColorHint">#c6c6c6</item>
        <item name="android:textSize">14sp</item>
        <!--<item name="android:textColorHighlight">@color/purple500</item>-->
    </style>
    
    <style name="CalendarHeaderText" parent="TextAppearance.MaterialCalendarWidget.Header" >
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">normal</item>

    </style>

    <style name="CalendarWeekText" parent="TextAppearance.MaterialCalendarWidget.WeekDay" >
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#c8c9cc</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@drawable/border_bottom</item>

    </style>

    <style name="CalendarDateText" parent="TextAppearance.MaterialCalendarWidget.Date" >
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#111111</item>
        <item name="android:textStyle">normal</item>

    </style>

    <style name="LoginText" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">#d8d8d8</item>
        <item name="colorControlActivated">#d8d8d8</item>

        <item name="android:textSize">12sp</item>
        <item name="android:padding">14dp</item>
        <item name="android:textColorHint">#8d8787</item>

    </style>



</resources>
